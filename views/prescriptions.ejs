<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Prescriptions</title>
  <style>
    /* Your CSS styles */
    

    header{
    position: relative;
    padding-top:20px;
    padding-left:20px;
    padding-right:20px;
    margin: 0;
    padding: 0;
    width: 1520px;
    border-bottom: 1px solid white;
    background-color:cyan;
  }

  body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      height: 100vh;
    }

    h1 {
      margin-top: 20px;
    }

    .filter-container {
      margin-bottom: 10px;
      display: flex;
      justify-content: space-around;
      width: 100%;
    }

    .filter-input {
      padding: 5px;
      margin-right: 10px;
    }

    .prescription-list {
      list-style-type: none;
      padding: 0;
      max-width: 600px;
      width: 100%;
    }

    .prescription-item {
      background-color: #fff;
      border: 1px solid #ddd;
      margin: 5px 0;
      padding: 10px;
      border-radius: 5px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
  </style>
</head>
<header>
    <h5>
    <img src="acllogo.png"alt="logo" width="150px" height="80px"> </h5>
    <hq>Welcome to EL7A2Ni Clinic</hq>
</header>

<body>
    
  <h1>My Prescriptions</h1>

  <div class="filter-container">
    <input type="date" class="filter-input" id="filterDate" placeholder="Filter by date">
    <input type="text" class="filter-input" id="filterDoctor" placeholder="Filter by doctor">
    <select class="filter-input" id="filterStatus">
      <option value="" selected disabled>Filter by status</option>
      <option value="filled">Filled</option>
      <option value="unfilled">Unfilled</option>
    </select>
    <button onclick="filterPrescriptions()">Filter</button>
  </div>

  <ul class="prescription-list" id="prescriptionList">
    <!-- Prescription items will be displayed here -->
  </ul>

  <script>
    // Dummy data (replace with actual data from your backend)
    const prescriptionsData = [
      { id: 1, date: '2023-10-10', doctor: 'Dr. Smith', status: 'filled' },
      { id: 2, date: '2023-10-12', doctor: 'Dr. Johnson', status: 'unfilled' },
      // Add more dummy data as needed
    ];

    // Function to render prescriptions
    function renderPrescriptions(prescriptions) {
      const prescriptionList = document.getElementById('prescriptionList');
      prescriptionList.innerHTML = '';

      prescriptions.forEach(prescription => {
        const listItem = document.createElement('li');
        listItem.className = 'prescription-item';
        listItem.innerHTML = `
          <span>${prescription.date}</span>
          <span>${prescription.doctor}</span>
          <span>Status: ${prescription.status}</span>
          <button onclick="selectPrescription(${prescription.id})">Select</button>
        `;
        prescriptionList.appendChild(listItem);
      });
    }

    // Function to filter prescriptions based on date, doctor, and status
    function filterPrescriptions() {
      const filterDate = document.getElementById('filterDate').value;
      const filterDoctor = document.getElementById('filterDoctor').value.toLowerCase();
      const filterStatus = document.getElementById('filterStatus').value.toLowerCase();

      const filteredPrescriptions = prescriptionsData.filter(prescription => (
        (!filterDate || prescription.date === filterDate) &&
        (!filterDoctor || prescription.doctor.toLowerCase().includes(filterDoctor)) &&
        (!filterStatus || prescription.status === filterStatus)
      ));

      renderPrescriptions(filteredPrescriptions);
    }

    // Function to handle selecting a prescription
    function selectPrescription(prescriptionId) {
      alert(`Selected prescription with ID: ${prescriptionId}`);
      // You can add more logic for handling the selected prescription
    }

    // Initial rendering of prescriptions
    renderPrescriptions(prescriptionsData);
  </script>

</body>
</html>